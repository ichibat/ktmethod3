{{#each errors}}
<div class="has-text-danger is-size-3">{{text}}</div>
{{else}}

{{/each}}

<h2 class="is-size-4">患者さんの基本データ編集</h2>
<form action="/patients/{{patient.id}}?_method=PUT" method="post">
  <input type="hidden" name="_method" value="PUT">
  <div class="field">
    <label for="karteNo" class="label">カルテ番号(英数字のみ入力可能)
    </label>
    <div class="control">
      <input class="input" type="text" id="karteNo" value="{{patient.karteNumber}}" name="karteNumber" required>
    </div>


    <div class="field">
      <label for="firstN" class="label">名前のイニシャル</label>
      <div class="control">
        <input class="input" type="text" id="firstN" name="firstNameInitial" required
          value="{{patient.firstNameInitial}}">
      </div>

      <label for="lastN" class="label">苗字のイニシャル</label>
      <div class="control">
        <input class="input" type="text" id="lastN" name="lastNameInitial" required value="{{patient.lastNameInitial}}">
      </div>

    </div>

    <div class="field is-grouped">
      <div class="control">
        <button class="button is-primary">登録</button>
      </div>
      <div class="control">
        <button class="button is-text">中止</button>
      </div>
    </div>
  </div>
</form>